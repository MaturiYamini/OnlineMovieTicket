<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <com.example.onlinemovieticket.components.PaymentCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvBookingSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking details..."
                android:textSize="14sp"
                android:textColor="@android:color/white" />

        </com.example.onlinemovieticket.components.PaymentCard>

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Amount: â‚¹0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Payment Method"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/rgPaymentMethods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbCreditCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Credit Card"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbDebitCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debit Card"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbUPI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPI"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbNetBanking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Net Banking"
                android:textSize="16sp"
                android:padding="12dp" />

        </RadioGroup>

        <com.example.onlinemovieticket.components.CustomButton
            android:id="@+id/btnConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Payment" />

    </LinearLayout>
</ScrollView>